// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/lancheteria"
}

model User {
  id        String    @id @default(uuid())
  nome      String
  email     String
  senha     String
  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("usuarios")
}

model Clientes {
  id          String    @id @default(uuid())
  nome        String
  cpf_cnpj    String
  rg_ie       String
  tel_cel     String
  tel_fixo    String
  cep         String
  rua         String
  complemento String
  bairro      String
  cidade      String
  estado      String
  create_at   DateTime? @default(now())
  update_at   DateTime? @default(now())

  @@map("clientes")
}

model Produtos {
  id         String    @id @default(uuid())
  nome       String
  fabricante String
  quantidade String
  banner     String
  preco      String
  create_at  DateTime? @default(now())
  update_at  DateTime? @default(now())

  categorias  Cateorias @relation(fields: [categoriaId], references: [id])
  categoriaId String

  @@map("produtos")
}

model Cateorias {
  id        String    @id @default(uuid())
  nome      String
  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  produtos Produtos[]

  @@map("categorias")
}

model Motoqueiro {
  id      String @id @default(uuid())
  nome    String
  nusuario String
  senha   String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("motoqueiros")
}
