generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/locadora"
}

model User{
  id String @id @default(uuid())
  nome String
  email String
  senha String
  crate_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("usuario")
}

model Movies{
  id String @id @default(uuid())
  titulo String
  diretor  String
  datadl String
  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  categorias Categorias @relation(fields: [categoriaId], references: [id])
  categoriaId String

  @@map("filmes")
}

model Categorias{
  id  String @id @default(uuid())
  nome String 
  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  filmes Movies[]

  @@map("categorias")
}